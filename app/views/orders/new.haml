%html{lang: "en"}
	%head
		%meta{charset: "utf-8"}/
		%meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
		%meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
		%meta{content: "Shawarma", name: "description"}/
		%meta{content: "Shawarma", name: "Amrit Ayalur"}/
		%link{href: "../../docs-assets/ico/favicon.png", rel: "shortcut icon"}/
		%title Shawarma

	%body
		.container
			/ Static navbar
			.navbar.navbar-default{role: "navigation"}
				.navbar-header
					%button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand{href: "/"} Shawarma
				.navbar-collapse.collapse

					%ul.nav.navbar-nav.navbar-right
						%li
							%a{href: "./"} About Us
						%li
							%a{href: "../navbar-static-top/"} Contact Us
				/ /.nav-collapse
			/ Main component for a primary marketing message or call to action
			.jumbotron
				%h1 Shawarma
				%p Welcome to Shawarma! Shawarma matches your catering needs with a business willing to donate food for your event! To get started, choose the date of your event below!

				%button#open-wizard.btn.btn-primary
					Go!

				/ %form{class: 'form-inline', role: 'form'}
				/ 	=form_for :order, :url => {:controller => 'orders', }
				/ 	%input#datepicker{type: 'text', :value => (Time.now.strftime("%m/%d/%Y"))}

				/ 	%button.btn.btn-primary.btn-lg{type: 'button'} Go!


				#satellite-wizard.wizard{"data-title" => "Place Order"}
					.wizard-card{"data-cardname" => "date"}
						%h3 Choose a date!
						.wizard-input-section
							.form-group
								.col-sm-6
									%input#datepicker{type: "text", :value => (Time.now.strftime("%m/%d/%Y"))}
		
						.wizard-card{"data-cardname" => "restaurant"}
							%h3 Restaurant Selection
							.wizard-input-section
								%p
									Choose a restaurant!
								%p
									Number of guests expected?
						.wizard-card.wizard-card-overlay{"data-cardname" => "information"}
							%h3 Organization/Event Information
							.wizard-input-section
								%p
									Please fill out the form below, so we can get to know you better!
								